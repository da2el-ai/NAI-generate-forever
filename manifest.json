{
    "name": "NAI generate forever",
    "version": "1.0.0",
    "description": "NovelAIにバッチカウント機能を追加する",
    "manifest_version": 3,
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://novelai.net/image"
            ],
            "css": [
                "dist/css/style.css"
            ],
            "js": [
                "dist/js/index.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]
}